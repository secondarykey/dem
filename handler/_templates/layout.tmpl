<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Datastore Emulator Viewer</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.blue-red.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">

{{ if .DarkMode }}

  {{$back  := "#161b22" }}
  {{$text  := "#cccccc" }}
  {{$hover := "#222222" }}

    <!-- DarkMode -->
    <style>
      .mdl-color--grey-100 {
        background:{{$back}} !important; 
      }

      .material-icons {
        color:{{$text}} !important;
      }
      .mdl-color-text--grey-600 {
        color:{{$text}} !important;
      }
      .mdl-data-table th {
        color:{{$text}} !important;
      }

      .list-item:hover {
        background:{{$hover}} !important; 
      }
      .mdl-data-table tbody tr:hover td{
        background:{{$hover}} !important; 
      }
      .mdl-data-table tbody tr:hover {
        background:{{$hover}} !important; 
      }
    </style>
{{ end }}

  </head>
  <body>

    <div id="menu" class="layout mdl-layout mdl-js-layout mdl-layout--fixed-header">

      <header class="header mdl-layout__header mdl-color--grey-100 mdl-color-text--grey-600">

        <div class="mdl-layout__header-row">
          <span class="mdl-layout-title">{{ .Title }}</span>
          <!-- namespaces -->
          <div class="mdl-layout-spacer"></div>
        </div>

      </header>

      <div class="drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">

        <header class="drawer-header">
          <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="darkmode">
            <input type="checkbox" id="darkmode" class="mdl-switch__input" {{if .DarkMode}}checked{{end}}>
            <span class="mdl-switch__label">DarkMode</span>
          </label>
        </header>

        <nav class="navigation mdl-navigation mdl-color--blue-grey-800">

{{ range .Projects }}
          <a class="mdl-navigation__link" href="/{{.ID}}/"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">forward</i>{{.Endpoint}}[{{ .ProjectID }}]</a>
{{ end }}

          <a class="mdl-navigation__link" id="registerProject"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">add_circle</i>New Project</a>

          <div class="mdl-layout-spacer"></div>

          <a class="mdl-navigation__link" href="https://github.com/secondarykey/dem"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">help_outline</i><span class="visuallyhidden">Help</span></a>

        </nav>
      </div>

      <main class="mdl-layout__content mdl-color--grey-100">

        <div class="mdl-grid">

          <div class="mdl-cell mdl-cell--2-col">
            <ul class="mdl-list">
            {{ range .Kinds }}
              <li class="mdl-list__item list-item" data-name="{{.Name}}">
                <span class="mdl-list__item-primary-content mdl-color-text--grey-600" data-name="{{.Name}}"> {{.Name}} </span>
              </li>
            {{ end }}
            </ul>
          </div>

          <div class="mdl-cell mdl-cell--10-col">

            <table id="view-table" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp mdl-color--grey-100 mdl-color-text--grey-600">
              <thead>
                <tr id="table-header"></tr>
              </thead>
              <tbody id="table-body"></tbody>
            </table>
            
          </div>
        </div>

        <input type="hidden" id="settingID" name="settingID" value="{{.ID}}"/>

      </main>

      <dialog id="ProjectDialog" class="mdl-dialog">
        <h4 class="mdl-dialog__title">New Project</h4>
        <div class="mdl-dialog__content mdl-grid">
          <div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
            <input class="mdl-textfield__input" type="text" id="endpoint">
            <label class="mdl-textfield__label" for="endpoint">e.g) localhost:8081</label>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
            <input class="mdl-textfield__input" type="text" id="projectID">
            <label class="mdl-textfield__label" for="projectID">datastore project id</label>
          </div>
        </div>

        <div class="mdl-dialog__actions">
          <button type="button" class="mdl-button entry">Entry</button>
          <button type="button" class="mdl-button close">Close</button>
        </div>
      </dialog>
    </div>

    <button id="editBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" disabled>
      EDIT
    </button>

    <button id="deleteBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" disabled>
      DELETE
    </button>

    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <script src="/assets/js/dem.js"></script>

  </body>
</html>
